RewriteEngine On
RewriteBase /

# Handle Angular and React Router
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

# Fallback for specific routes
RewriteRule ^documents/?$ /index.html [L]
RewriteRule ^dashboard/?$ /index.html [L]
RewriteRule ^tasks/?$ /index.html [L]
RewriteRule ^quotes/?$ /index.html [L]
RewriteRule ^messages/?$ /index.html [L]
RewriteRule ^roadmap/?$ /index.html [L]
RewriteRule ^projects/?$ /index.html [L]
RewriteRule ^invoices/?$ /index.html [L]
RewriteRule ^credits/?$ /index.html [L]
RewriteRule ^archive/?$ /index.html [L]
RewriteRule ^profile/?$ /index.html [L]
